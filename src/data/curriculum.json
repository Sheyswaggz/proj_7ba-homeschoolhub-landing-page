  "teachingMethodology": {
    "approach": "Classical-Charlotte Mason Hybrid",
    "description": "We combine the rigor of classical education with the living books approach of Charlotte Mason, emphasizing critical thinking, character development, and a love of learning",
    "principles": [
      {
        "name": "Mastery-Based Learning",
        "description": "Students progress when they demonstrate understanding, not based on arbitrary timelines"
      },
      {
        "name": "Living Books",
        "description": "Rich, engaging literature and primary sources instead of dry textbooks"
      },
      {
        "name": "Narration",
        "description": "Students retell what they've learned to develop comprehension and communication skills"
      },
      {
        "name": "Nature Study",
        "description": "Regular outdoor observation and exploration to connect with the natural world"
      },
      {
        "name": "Short Lessons",
        "description": "Focused, intentional instruction that respects attention spans and maximizes engagement"
      },
      {
        "name": "Habit Training",
        "description": "Developing good habits of mind, body, and character alongside academic skills"
      }
    ],
    "dailyStructure": {
      "morning": "Core academics (math, language arts, science)",
      "midday": "Read-alouds, nature study, or hands-on projects",
      "afternoon": "Electives, arts, physical activity, and independent reading"
    }
  },
